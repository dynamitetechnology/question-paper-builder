<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>SB Admin 2 - Register</title>
    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">
    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <div class="user">
                                <div class="form-group row">
                                    <div class="col-sm-12 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user" id="name-of-institute"
                                            placeholder="Name">
                                    </div>
                       
                                </div>
        
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user" id="email-of-institute"
                                        placeholder="Email">
                                </div>

                                <div class="form-group">
                                    <select class="form-select form-control-user w-100" id="role">
                                        <option value="">Select Your Role</option>
                                        <%for(let role of roles){%>
                                        <option value="<%-role.id%>"><%-role.name%></option>
                                        <%}%>
                                    </select>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-12 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user"
                                            id="phone-of-institute" placeholder="Phone">
                                    </div>
                                    <div class="col-sm-12 mb-3 mt-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user"
                                            id="password-of-institute" placeholder="Password">
                                    </div>
                                </div>
                                <button  class="btn btn-primary btn-user btn-block" id="institute-registration">
                                    Register Account
                                </button>
                            </div>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/forgot-password">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/login">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#institute-registration").on('click', function(){
                let name_of_institute = $("#name-of-institute").val()
                let password_of_institute = $("#password-of-institute").val()
                let email_of_institute = $("#email-of-institute").val()
                let phone_of_institute = $("#phone-of-institute").val()
                let role = $("#role").val()
                $.ajax({
                type: "POST",
                url: "/register",
                data: {
                    name: name_of_institute,
                    password: password_of_institute,
                    email: email_of_institute,
                    phone: phone_of_institute,
                    role_id: role
                },
                success:  (response) => {
                    console.log('Response:::::::', response.data.message)
                    if(response.data.status == "200"){
                        swal({
                            title: "Wow!",
                            text: response.data.message,
                            type: "success"
                        }).then(function() {
                            window.location = "/signin";
                        });
                    }else{
                        swal("Hi!", response.data.message);
                    }
                    
                },
                dataType: 'JSON'
                });
            })
        })
    </script>
</body>

</html>